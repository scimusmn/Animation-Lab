<blocks font="ArialNarrow.ttf" title="Make a story using the Rattle Snail" subtitle="Advanced: Create interactive sequences with conditional statements" xmlns:blck="http://www.smm.org/">
	<bar name="Action blocks" color="0xde8c3a">
		<block name="right eye %d" color="0xde8c3a">
      <dropdown>
        <dds>BACK</dds>
        <dds>FORTH</dds>
      </dropdown>
      <file>reye.blk</file>
    </block>
		<block name="left eye %d" color="0xde8c3a">
      <dropdown>
        <dds>BACK</dds>
        <dds>FORTH</dds>
      </dropdown>
      <file>leye.blk</file>
    </block>
		<block name="%d body" color="0xde8c3a">
      <dropdown>
        <dds>EXTEND</dds>
        <dds>RETRACT</dds>
      </dropdown>
      <file>scrunch.blk</file>
    </block>
    <block name="move tail %d" color="0xde8c3a">
      <dropdown>
          <dds>STOP</dds>
          <dds>SLOW</dds>
          <dds>FAST</dds>
      </dropdown>
      <file>rattle.blk</file>
    </block>
		<block name="play sound %d" color="0xde8c3a">
      <dropdown>
          <dds>NONE</dds>
          <dds>RATTLE</dds>
          <dds>HISS</dds>
          <selected>HISS</selected>
      </dropdown>
      <file>playSound.blk</file>
    </block>
	</bar>
	<bar name="Timing blocks" color="0x13b5ea">
		<block name="for %d seconds">
			<type>c</type>
			<bracket />
      <dropdown>
          <ddlow>0</ddlow>
          <ddhigh>10</ddhigh>
      </dropdown>
			<file>forSeconds.blk</file>
		</block>
		<block name="wait %d seconds">
			<type>d</type>
      <dropdown>
          <ddlow>0</ddlow>
          <ddhigh>5</ddhigh>
      </dropdown>
			<file>delay.blk</file>
		</block>
		<block name="repeat %d times">
			<type>F</type>
			<bracket />
      <dropdown>
          <ddlow>0</ddlow>
          <ddhigh>10</ddhigh>
          <ddsteps>11</ddsteps>
      </dropdown>
			<file>repeat.blk</file>
		</block>
		<block name="forever">
			<bracket />
			<file>forever.blk</file>
		</block>
	</bar>
	<bar name="Conditional blocks" color="896016">
		<block name="if button pressed">
			<bracket />
			<file>ifBP.blk</file>
		</block>
	</bar>
</blocks>
	