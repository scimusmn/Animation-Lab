<blocks color="0x13b5ea">
    <block class="delay" label="delay" name="wait %d second">
        <dropdown>
            <ddlow>0</ddlow>
            <ddhigh>5</ddhigh>
            <selected>1</selected>
        </dropdown>
        <file>timing/delay.blk</file>
    </block>
    <block class="timer" label="forSec" name="for %d seconds">
        <bracket />
        <dropdown>
            <ddlow>0</ddlow>
            <ddhigh>10</ddhigh>
        </dropdown>
        <file>timing/forSeconds.blk</file>
    </block>
    <block class="rpt" label="repeat" name="repeat %d times">
        <bracket />
        <dropdown>
            <ddlow>0</ddlow>
            <ddhigh>10</ddhigh>
        </dropdown>
        <file>timing/repeat.blk</file>
    </block>
    <block class="rpt" label="forever" name="forever">
        <bracket />
        <file>timing/forever.blk</file>
    </block>
    <block class="timer" label="oneMin" name="repeat for 1 minute">
        <bracket />
        <file>timing/oneMin.blk</file>
    </block>
</blocks>