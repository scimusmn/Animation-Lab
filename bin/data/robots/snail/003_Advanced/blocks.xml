<blocks font="ArialNarrow.ttf" title="Make a story using the Rattle Snail" subtitle="Advanced: Create interactive sequences with conditional statements" xmlns:blck="http://www.smm.org/">
	<bar name="Action blocks" color="0xde8c3a">
		<block name="right eye %d" color="0xde8c3a">
			<dropdown>
				<dds>BACK</dds>
				<dds>FORWARD</dds>
			</dropdown>
			<file>actions/rightEye.blk</file>
		</block>
		<block name="left eye %d" color="0xde8c3a">
			<dropdown>
				<dds>BACK</dds>
				<dds>FORWARD</dds>
			</dropdown>
			<file>actions/leftEye.blk</file>
		</block>
		<block name="%d body" color="0xde8c3a">
			<dropdown>
				<dds>EXTEND</dds>
				<dds>RETRACT</dds>
			</dropdown>
			<file>actions/body.blk</file>
		</block>
		<block name="move tail %d" color="0xde8c3a">
			<dropdown>
				<dds>STOP</dds>
				<dds>FAST</dds>
			</dropdown>
			<file>actions/tail.blk</file>
		</block>
		<block name="play sound %d" color="0xde8c3a">
			<dropdown>
				<dds>NONE</dds>
				<dds>HISS</dds>
				<dds>RATTLE</dds>
				<selected>HISS</selected>
			</dropdown>
			<file>actions/playSound.blk</file>
		</block>
		<block name="stop sound" color="0xde8c3a">
			<file>actions/stopSound.blk</file>
		</block>
	</bar>
	<bar name="Timing blocks" color="0x13b5ea">
		<block name="for %d seconds">
			<bracket />
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
            </dropdown>
			<file>timing/forSeconds.blk</file>
		</block>
		<block name="wait %d second">
			<dropdown>
				<ddlow>0</ddlow>
				<ddhigh>5</ddhigh>
			</dropdown>
			<file>timing/delay.blk</file>
		</block>
		<block name="repeat %d times">
			<bracket />
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
                <ddsteps>11</ddsteps>
            </dropdown>
			<file>timing/repeat.blk</file>
		</block>
		<block name="forever">
			<bracket />
			<file>timing/forever.blk</file>
		</block>
	</bar>
	<bar name="Conditional blocks" color="0x65c270">
		<block name="wait until button press">
			<file>conditions/waitBP.blk</file>
		</block>
		<block name="if button pressed">
			<bracket />
			<file>conditions/ifBP.blk</file>
			<sibling>if button is not pressed</sibling>
		</block>
		<block name="if button is not pressed">
			<bracket />
			<file>conditions/ifNotBP.blk</file>
			<sibling>if button pressed</sibling>
		</block>
		<block name="while button pressed">
			<bracket />
			<file>conditions/ifBP.blk</file>
		</block>
		<block name="while sound is playing">
			<bracket />
			<file>conditions/whileSoundPlaying.blk</file>
		</block>
	</bar>
</blocks>
	