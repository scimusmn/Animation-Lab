<blocks font="ArialNarrow.ttf" title="Make a story using the FishBot" subtitle="Advanced: Create interactive sequences with conditional statements" xmlns:blck="http://www.smm.org/">
	<bar name="Action blocks" color="0xde8c3a">
		<block name="move flipper %d" color="0xde8c3a">
			<dropdown>
				<dds>LEFT</dds>
				<dds>RIGHT</dds>
			</dropdown>
			<file>actions/flip.blk</file>
		</block>
		<block name="move tail %d" color="0xde8c3a">
			<dropdown>
				<dds>LEFT</dds>
				<dds>RIGHT</dds>
			</dropdown>
			<file>actions/tail.blk</file>
		</block>
		<block name="wriggle speed %d">
			<dropdown>
				<dds>STOP</dds>
				<dds>SLOW</dds>
				<dds>FAST</dds>
			</dropdown>
			<file>actions/wriggle.blk</file>
		</block>
		<block name="play sound %d">
			<dropdown>
				<dds>NONE</dds>
				<dds>GLUB</dds>
				<dds>BUBBLE</dds>
			</dropdown>
			<file>actions/playSound.blk</file>
		</block>
		<block name="stop sound">
			<file>actions/stopSound.blk</file>
		</block>
	</bar>
	<bar name="Timing blocks" color="0x13b5ea">
		<block name="for %d seconds">
			<bracket />
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
            </dropdown>
			<file>timing/forSeconds.blk</file>
		</block>
		<block name="wait %d second">
			<dropdown>
				<ddlow>0</ddlow>
				<ddhigh>5</ddhigh>
			</dropdown>
			<file>timing/delay.blk</file>
		</block>
		<block name="repeat %d times">
			<bracket />
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
                <ddsteps>11</ddsteps>
            </dropdown>
			<file>timing/repeat.blk</file>
		</block>
		<block name="forever">
			<bracket />
			<file>timing/forever.blk</file>
		</block>
	</bar>
	<bar name="Conditional blocks" color="0x65c270">
		<block name="wait until button press">
			<file>conditions/waitBP.blk</file>
		</block>
		<block name="if button pressed">
			<bracket />
			<file>conditions/ifBP.blk</file>
			<sibling>if button is not pressed</sibling>
		</block>
		<block name="if button is not pressed">
			<bracket />
			<file>conditions/ifNotBP.blk</file>
			<sibling>if button pressed</sibling>
		</block>
		<block name="while button pressed">
			<bracket>1</bracket>
			<file>conditions/ifBP.blk</file>
		</block>
		<block name="while sound is playing">
			<bracket />
			<file>conditions/whileSoundPlaying.blk</file>
		</block>
	</bar>
</blocks>
	